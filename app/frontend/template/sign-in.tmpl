{{ define "sign-in" }}
{{ template "header" . }}

<div class="flex flex-grow items-center justify-center bg-slate-50 py-12 px-4 sm:px-6 lg:px-8">
    
    <div class="w-full max-w-[420px] rounded-[24px] border border-slate-100 bg-white p-8 shadow-[0_15px_35px_rgba(0,0,0,0.03)] sm:p-10">
        
        <div class="mb-8 text-center">
            <div class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-2xl bg-indigo-50">
                <i class="fa-solid fa-bag-shopping text-3xl text-indigo-600"></i>
            </div>
            <h3 class="text-2xl font-bold tracking-tight text-slate-900">Welcome Back</h3>
            <p class="mt-2 text-sm text-slate-500">Please enter your details</p>
        </div>

        <form method="post" action="/auth/login{{ if .next }}?next={{.next}}{{ end }}" class="space-y-5">
            
            <div>
                <label for="email" class="mb-1.5 block text-sm font-medium text-slate-700">
                    Email {{template "required"}}
                </label>
                <input type="email" name="email" id="email" required placeholder="name@example.com"
                    class="block w-full rounded-xl border border-slate-200 bg-slate-50 px-4 py-3 text-slate-900 transition-all placeholder:text-slate-400 focus:border-indigo-500 focus:bg-white focus:outline-none focus:ring-4 focus:ring-indigo-500/10">
            </div>

            <div>
                <div class="flex items-center justify-between mb-1.5">
                    <label for="password" class="text-sm font-medium text-slate-700">
                        Password {{template "required"}}
                    </label>
                    <a href="#" class="text-xs font-semibold text-indigo-600 hover:text-indigo-500 transition-colors">Forgot?</a>
                </div>
                <input type="password" name="password" id="password" required
                    class="block w-full rounded-xl border border-slate-200 bg-slate-50 px-4 py-3 text-slate-900 transition-all focus:border-indigo-500 focus:bg-white focus:outline-none focus:ring-4 focus:ring-indigo-500/10">
            </div>

            <div class="flex items-center">
                <input id="remember" name="remember" type="checkbox"
                    class="h-4 w-4 rounded border-slate-300 text-indigo-600 focus:ring-indigo-500 transition-all cursor-pointer">
                <label for="remember" class="ml-2 block text-sm text-slate-500 cursor-pointer select-none">Keep me logged in</label>
            </div>

            <button type="submit" 
                class="group relative flex w-full justify-center rounded-xl bg-indigo-600 px-4 py-3.5 text-sm font-semibold text-white transition-all hover:bg-indigo-500 hover:-translate-y-0.5 active:scale-[0.98] shadow-lg shadow-indigo-200">
                Sign in
            </button>

            <div class="text-center text-sm text-slate-500 mt-6">
                Don't have an account? 
                <a href="/sign-up" class="font-semibold text-indigo-600 hover:text-indigo-500 transition-colors">Sign up</a>
            </div>
        </form>

        <div class="mt-8 border-t border-slate-100 pt-6 text-center">
            <p class="mb-4 text-xs font-medium uppercase tracking-wider text-slate-400">Or continue with</p>
            <div class="flex justify-center">
                <a href="#" class="flex h-12 w-12 items-center justify-center rounded-full border border-slate-200 bg-white text-slate-900 transition-all hover:bg-slate-50 hover:border-slate-300 active:scale-95 shadow-sm">
                    <i class="fa-brands fa-github text-2xl opacity-80"></i>
                </a>
            </div>
        </div>

    </div>
</div>

{{ template "footer" . }}
{{ end }}