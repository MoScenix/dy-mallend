{{ define "search" }}
{{ template "header" . }}

<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 2xl:grid-cols-6 gap-4 mt-6">
    {{ range $.products }}
    <div class="group">
        <a href="/product?id={{ .Id }}" class="block no-underline">
            <div class="bg-white border border-gray-100 rounded-xl overflow-hidden h-full flex flex-col transition-all duration-300 ease-[cubic-bezier(0.165,0.84,0.44,1)] group-hover:-translate-y-1.5 group-hover:border-soft-blue group-hover:shadow-lg">
                
                <div class="aspect-square bg-gray-50 flex items-center justify-center border-b border-gray-50 overflow-hidden">
                    <img src="{{ .Picture }}" 
                         class="w-full h-full object-contain p-4 transition-transform duration-500 group-hover:scale-105" 
                         alt="{{ .Name }}">
                </div>

                <div class="p-4 flex-grow">
                    <h3 class="font-medium text-gray-600 text-sm mb-1.5 truncate">
                        {{ .Name }}
                    </h3>
                    
                    <div class="flex justify-between items-center">
                        <span class="font-bold text-gray-800 text-base">
                            ${{ .Price }}
                        </span>
                        
                        <div class="w-8 h-8 flex items-center justify-center rounded-lg bg-light-blue text-accent-color transition-colors duration-200 group-hover:bg-accent-color group-hover:text-white">
                            <i class="fa-solid fa-plus text-xs"></i>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>
    {{ end }}
</div>

{{ template "footer" . }}
{{ end }}