{{ define "product" }}
{{ template "header" . }}

<div class="max-w-6xl mx-auto my-6 bg-white rounded-3xl p-8 border border-gray-100 shadow-sm">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="bg-gray-50 rounded-2xl overflow-hidden border border-gray-100 flex justify-center items-center aspect-square">
            <img src="{{ .item.Picture }}" alt="{{ .item.Name }}" class="max-w-full h-auto p-8 object-contain">
        </div>

        <div class="lg:pl-6">
            <div class="space-y-6">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900 mb-2">{{ .item.Name }}</h1>
                    <span class="text-2xl font-bold text-accent-color block">
                        ${{ .item.Price }}
                    </span>
                </div>

                <p class="text-gray-600 leading-relaxed">
                    {{ .item.Description }}
                </p>

                <div class="space-y-2">
                    <label class="block text-xs font-bold text-gray-400 uppercase tracking-wider">Quantity</label>
                    <div class="flex items-center space-x-1">
                        <div class="flex items-center bg-gray-100 rounded-xl p-1 border border-gray-200">
                            <button onclick="stepQty(-1)" 
                                    class="w-10 h-10 flex items-center justify-center text-gray-500 hover:bg-white hover:shadow-sm rounded-lg transition-all active:scale-90">
                                <i class="fa-solid fa-minus text-xs"></i>
                            </button>
                            
                            <input type="number" id="productNum" readonly
                                   class="w-14 text-center bg-transparent border-none focus:ring-0 font-bold text-gray-700" 
                                   value="1" min="1">
                            
                            <button onclick="stepQty(1)" 
                                    class="w-10 h-10 flex items-center justify-center text-gray-500 hover:bg-white hover:shadow-sm rounded-lg transition-all active:scale-90">
                                <i class="fa-solid fa-plus text-xs"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <button type="button" onclick="addToCart('{{ .item.Id }}')" id="addToCartBtn"
                        class="w-full sm:w-auto flex items-center justify-center bg-accent-color hover:bg-blue-500 text-white px-12 py-4 rounded-xl font-bold transition-all shadow-lg shadow-blue-100 active:scale-95">
                    <i class="fa-solid fa-cart-plus mr-2"></i>
                    <span id="btnText">Add to Cart</span>
                </button>
            </div>
        </div>
    </div>
</div>

<script>
function stepQty(delta) {
    const input = document.getElementById('productNum');
    let val = parseInt(input.value) + delta;
    if (val < 1) val = 1;
    input.value = val;
}

async function addToCart(productId) {
    const btn = document.getElementById('addToCartBtn');
    const btnText = document.getElementById('btnText');
    const quantity = document.getElementById('productNum').value;

    btn.disabled = true;
    btn.classList.add('opacity-50', 'cursor-not-allowed');
    btnText.innerText = 'Redirecting...';

    try {
        const response = await fetch('/cart/add', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                product_id: parseInt(productId),
                quantity: parseInt(quantity)
            })
        });

        const result = await response.json();

        if (result.success) {
            // 核心修改：成功后直接跳转到购物车页面
            window.location.href = '/cart';
        } else {
            alert('Error: ' + (result.message || 'Could not add item'));
            resetBtn();
        }
    } catch (error) {
        alert('Network error');
        resetBtn();
    }

    function resetBtn() {
        btn.disabled = false;
        btn.classList.remove('opacity-50', 'cursor-not-allowed');
        btnText.innerText = 'Add to Cart';
    }
}
</script>

{{ template "footer" . }}
{{ end }}