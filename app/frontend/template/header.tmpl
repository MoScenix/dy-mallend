{{ define "header" }}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {{ if $.redirect }}
    <meta http-equiv="refresh" content="5;url=/checkout/result" />
    {{ end}}
    <title>Shop</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Poppins', 'sans-serif'],
                    },
                    colors: {
                        'light-blue': '#f0f7ff',
                        'soft-blue': '#e1effe',
                        'text-main': '#4a5568',
                        'accent-color': '#63b3ed',
                    }
                }
            }
        }
    </script>
</head>

<body class="font-sans bg-white text-text-main flex flex-col min-h-screen">
    <header class="sticky top-0 z-50 bg-white/98 border-b border-gray-100 shadow-sm">
        <nav class="px-[3%] py-5">
            <div class="flex items-center justify-between flex-wrap lg:flex-nowrap">
                <a class="flex items-center text-2xl font-bold text-[#2d3748] mr-8" href="/">
                    <i class="fa-solid fa-bag-shopping text-accent-color mr-2"></i>
                    <span>Shop</span>
                </a>
                <button class="lg:hidden p-2 text-gray-500 focus:outline-none"
                    onclick="document.getElementById('navContent').classList.toggle('hidden')">
                    <i class="fa-solid fa-bars text-xl"></i>
                </button>

                <div id="navContent" class="hidden lg:flex flex-grow items-center w-full lg:w-auto mt-4 lg:mt-0">
                    <ul class="flex flex-col lg:flex-row list-none lg:mr-auto mb-2 lg:mb-0 space-y-2 lg:space-y-0 lg:space-x-6 items-start lg:items-center">
                        <li>
                            <a class="font-medium text-text-main hover:text-accent-color transition-colors" href="/about">About</a>
                        </li>
                    </ul>

                    <div class="flex items-center space-x-6 w-full lg:w-auto mt-4 lg:mt-0">
                        <form action="/search" method="get" class="relative group">
                            <div class="flex items-center bg-gray-50 border border-gray-100 rounded-xl px-3 py-2 transition-all duration-300 focus-within:bg-white focus-within:border-accent-color focus-within:ring-2 focus-within:ring-blue-100 w-full lg:w-[320px] lg:focus-within:w-[380px]">
                                <i class="fa-solid fa-magnifying-glass text-gray-300 mr-2"></i>
                                <input class="bg-transparent border-none focus:ring-0 text-sm w-full outline-none placeholder:text-gray-400"
                                    type="search" name="q" placeholder="Search items..." value="{{ .q }}">
                            </div>
                        </form>

                        <div class="text-xl text-[#2d3748] relative">
                            {{ template "cart-num" . }}
                        </div>

                        {{ if .user_id }}
                        <div class="relative group">
                            <button class="flex items-center focus:outline-none">
                                {{ if .avatar }}
                                <img src="{{ .avatar }}" alt="avatar" class="rounded-full border w-11 h-11 object-cover">
                                {{ else }}
                                <i class="fa-regular fa-circle-user text-2xl"></i>
                                {{ end }}
                            </button>
                            <ul class="absolute right-0 hidden group-hover:block bg-white shadow-2xl rounded-xl border border-gray-50 py-2 min-w-[180px] z-50">
                                <li><a class="block px-4 py-2 hover:bg-gray-50 text-sm" href="/order">Order Center</a></li>
                                <li><a class="block px-4 py-2 hover:bg-gray-50 text-sm" href="/center">Profile</a></li>
                                <li class="border-t border-gray-100 my-1"></li>
                                <li>
                                    <form action="/auth/logout" method="post" class="m-0">
                                        <button class="w-full text-left px-4 py-2 text-red-500 hover:bg-red-50 text-sm transition-colors"
                                            type="submit">Logout</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                        {{ else }}
                        <a href="/sign-in"
                            class="bg-light-blue text-[#3182ce] px-6 py-2.5 rounded-xl font-semibold text-sm hover:bg-blue-100 transition-colors">
                            Sign In
                        </a>
                        {{ end }}
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow pt-12">
        <div class="px-[3%]">
{{ end }}
