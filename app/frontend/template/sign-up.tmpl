{{ define "sign-up" }}
{{ template "header" . }}

<style>
    /* 登录卡片容器：限制宽度并严格居中 */
    .auth-card {
        max-width: 420px;
        /* 框短一点的核心设置 */
        width: 100%;
        margin: auto;
        /* 配合 flex 实现居中 */
        padding: 2.5rem;
        background: #ffffff;
        border-radius: 24px;
        border: 1px solid #f1f4f8;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.03);
    }

    /* 输入框美化 */
    .auth-form .form-control {
        background-color: #f7fafc;
        border: 1px solid #edf2f7;
        padding: 0.75rem 1rem;
        border-radius: 12px;
        transition: all 0.2s;
    }

    .auth-form .form-control:focus {
        background-color: #fff;
        border-color: var(--accent-color);
        box-shadow: 0 0 0 4px rgba(99, 179, 237, 0.1);
    }

    /* 登录按钮：使用淡蓝色调 */
    .btn-auth {
        background-color: var(--accent-color);
        border: none;
        padding: 0.8rem;
        border-radius: 12px;
        font-weight: 600;
        width: 100%;
        color: white;
        margin-top: 1rem;
        transition: all 0.3s;
    }

    .btn-auth:hover {
        background-color: #4299e1;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(66, 153, 225, 0.2);
    }

    .form-label {
        font-weight: 500;
        color: #4a5568;
        margin-bottom: 0.5rem;
    }

    .auth-links {
        font-size: 0.875rem;
        color: #718096;
    }

    .auth-links a {
        color: var(--accent-color);
        text-decoration: none;
        font-weight: 500;
    }

    /* 第三方登录 */
    .social-login {
        border-top: 1px solid #edf2f7;
        margin-top: 2rem;
        padding-top: 1.5rem;
        text-align: center;
    }
</style>

<div class="container d-flex flex-grow-1 align-items-center justify-content-center py-5">
    <div class="auth-card">
        <div class="text-center mb-4">
            <i class="fa-solid fa-bag-shopping mb-3" style="font-size: 2.5rem; color: var(--accent-color);"></i>
            <h3 class="fw-bold text-dark">Welcome Back</h3>
            <p class="text-muted small">Please enter your details</p>
        </div>

        <form method="post" class="auth-form" action="/auth/register">
            <div class="mb-3">
                <label for="email" class="form-label">Email {{template "required"}}</label>
                <input type="email" name="email" class="form-control" id="email" placeholder="name@example.com"
                    required>
            </div>
            <div class="mb-4">
                <div class="d-flex justify-content-between">
                    <label for="password" class="form-label">Password {{template "required"}}</label>
                </div>
                <input type="password" class="form-control" id="password" name="password" placeholder="" required>
            </div>
            <div class="mb-4">
                <div class="d-flex justify-content-between">
                    <label for="password-confirm" class="form-label">Password confirm {{template "required"}}</label>
                </div>
                <input type="password" class="form-control" id="password_confirm" name="password_confirm" placeholder=""
                    required>
            </div>
            <button type="submit" class="btn btn-auth">Sign up</button>

            <div class="mt-4 text-center auth-links">
                Already have account, click here to <a href="/sign-in">Sign in</a>
            </div>
        </form>

        <div class="social-login">
            <p class="small text-muted mb-3">Or continue with</p>
            <a href="" class="text-dark">
                <i class="fa-brands fa-github" style="font-size: 1.8rem; opacity: 0.8;"></i>
            </a>
        </div>
    </div>
</div>

{{ template "footer" . }}
{{ end }}